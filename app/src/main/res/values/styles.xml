<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PendoconTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/LightGreen</item>
        <item name="colorPrimaryDark">@color/LightGreen</item>
        <item name="colorAccent">@color/LightGreen</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Tab_View_ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">

        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/mainColorDark</item>
        <item name="colorAccent">@color/mainColor</item>

    </style>
</resources>
